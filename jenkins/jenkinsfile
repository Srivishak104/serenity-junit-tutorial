pipeline{
    agent any
     tools {
            maven 'Maven 4.0.0'
            jdk 'jdk22'
        }
    stages{
        stage("clean up"){
            steps{
                deleteDir()
            }
        }
        stage("Build"){
            steps{
                dir("serenity-junit-tutorial"){
                    sh "mvn clean install"
                }
            }
        }
        stage("Test"){
            steps{
                dir("serenity-junit-tutorial"){
                    sh "mvn test"
                }
            }
        }
    }
}